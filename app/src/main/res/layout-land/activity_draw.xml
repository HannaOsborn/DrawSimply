<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.bignerdranch.android.drawsimply.draw.DrawView
        android:id="@+id/draw_view"
        android:layout_width="627dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:background="@color/white" />

    <ImageButton
        android:id="@+id/pen_button"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/pen_button"
        android:gravity="top|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/pen"
        tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/undo_button"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="242dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/undo_button"
        android:gravity="top|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/undo"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/clear_button"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="125dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/clear_button"
        android:gravity="top|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/clear"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/redo_button"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="180dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/redo_button"
        android:gravity="top|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/redo"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="235dp"
        android:layout_marginBottom="57dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/save_button"
        android:gravity="top|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/save"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="295dp"
        android:layout_marginBottom="-15dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/add_button"
        android:gravity="top|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/add"
        tools:ignore="VisualLintBounds,ImageContrastCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="627dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/image_view"
        android:scaleType="fitXY"
        android:visibility="invisible"
        tools:ignore="ImageContrastCheck" />

</RelativeLayout>